{
  "manifest_version": 3,
  "name": "AI Article Summarizer",
  "version": "1.2",
  "description": "Summarize articles using Gemini AI",
  "permissions": ["activeTab", "storage", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "host_permissions": ["https://generativelanguage.googleapis.com/*"]
}